{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "-I./include",
                "-L./lib",
                "${workspaceFolder}/src/\\*.cpp",
                "${workspaceFolder}/src/\\*.c",
                "-lglfw3dll",
                // "-lassimp-vc140-mt",
                "-o",
                "myprogram",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: g++"
        }
    ]
}